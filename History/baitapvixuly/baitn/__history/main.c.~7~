#include <main.h>
#int_TIMER1
void TIMER1_isr(void){
   set_timer1(40535); 
    output_toggle(pin_B0);
    delay_ms(2); 
}

void main()
{
  
   setup_timer_1(T1_inTERNAL|T1_DIV_BY_8);  
    set_timer1(40535); 
   enable_interrupts(INT_TIMER1);
   enable_interrupts(GLOBAL);
   while(TRUE)
   {
      for(int i = 0;i<2;i++)
         {
            OUTPUT_HIGH(pin_b1);
            delay_ms(i*2+2);
            OUTPUT_LOW(pin_b1);
            delay_ms(i*2+1);
            if(output_drive(pin_B0)==output_drive(pin_B1)){ OUTPUT_HIGH(pin_b2); }
         }

      //TODO: User Code
   }

}
