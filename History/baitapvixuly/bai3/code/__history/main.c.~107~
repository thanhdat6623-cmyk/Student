#include <main.h>

unsigned int16 n=0;
unsigned int hienso(unsigned int8 n1){
   switch(n1){
      case 0 : return 0xC0;                           
      case 1 : return 0xF9;
      case 2 : return 0xA4;
      case 3 : return 0xB0;
      case 4 : return 0x99;
      case 5 : return 0x92;
      case 6 : return 0x82;
      case 7 : return 0xF8;
      case 8 : return 0x80;
      case 9 : return 0x90;
   }
}
void tachso(unsigned int16 n2){
   output_c(0x01);
   output_b(hienso(n2%10));
   delay_ms(10);
   output_b(0xff);
   n2=n2/10;
   output_c(0x02);
   output_b(hienso(n2%10));
   delay_ms(10); 
   output_b(0xff);
   n2=n2/10;
   output_c(0x04);
   output_b(hienso(n2%10));
   delay_ms(10);
   output_b(0xff);
}
void main()
{
   while(TRUE)
   {
      tachso(n);
      if (input(PIN_D0) == 0) {
         while(Pin_D0==0){}
          n++;
          
         
      }

        if (input(PIN_D1) == 0) {
          while(Pin_D0==0){}
            n--;
            }

        if (n >999) {
            n =0;
        }
        
    }
}

