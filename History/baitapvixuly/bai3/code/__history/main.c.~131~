#include <main.h>
unsigned int digit,digit1,digit10,digit100;
unsigned int8 n=2;
unsigned int seg(unsigned int num){
   switch(num){
      case 0 : return 0xC0;                           
      case 1 : return 0xF9;
      case 2 : return 0xA4;
      case 3 : return 0xB0;
      case 4 : return 0x99;
      case 5 : return 0x92;
      case 6 : return 0x82;
      case 7 : return 0xF8;
      case 8 : return 0x80;
      case 9 : return 0x90;
   }
}
void hienso(unsigned int so){
   output_c(0x01);
   digit=so%10;
   digit1=seg(digit);
   output_b(digit1);
   delay_ms(10);
   output_b(0xff);
   output_c(0x02);
   digit=(so/10)%10;
   digit10=seg(digit);
   output_b(digit10);
   delay_ms(10);
   output_c(0x04);
   digit=((so/10)/10)%10;
   digit100=seg(digit);
   output_b(digit100);
   delay_ms(10);
   output_b(0xff);
}
void main()
{
   set_tris_D(0xff);
   while(TRUE)
   {
      hienso(n);
      if (!input(PIN_D6)) {
         while(input(PIN_D6)==0){
          
        } 
        n++;
      }

        if (!input(PIN_D7)) {
          while(input(PIN_D7) ==0){ }
           n--;
           delay_ms(10);
            }
         if (n >999) {
            n =0;
        }
       
    }
}

